---
const flags = ['cz', 'sk', 'us', 'gb', 'de', 'fr', 'jp', 'ca'];
---
<style is:inline>
  .flag-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
    gap: 1rem;
    padding: 1rem;
  }
  .flag-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 0.8rem;
    text-align: center;
  }
  /* Zvětšení ikon a zajištění kulatého tvaru */
  .fi {
    font-size: 3rem;
    margin-bottom: 0.5rem;
    border: 1px solid #eee;
  }
</style>

<div class="flag-grid">
  {flags.map((code) => (
    <div class="flag-card">
      <span class={`fi fi-${code} fib`}></span>
      <code>{code}</code>
    </div>
  ))}
</div>
