---
// src/components/FlagGrid.astro
const flags = ['cz', 'sk', 'us', 'gb', 'de', 'fr', 'jp', 'ca'];
import 'flag-icons/css/flag-icons.min.css';
---

<div class="flag-grid">
  {flags.map((code) => (
    <div class="flag-card">
      <span class={`fi fi-${code} fib`}></span>
      <!--<code>{code}< /code>-->
    </div>
  ))}
</div>

<style>
  .flag-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(65px, 1fr));
    align-items: start;
  }
  .flag-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    margin-top: 0;
  }

  .fi {
    width: 4rem;
    height: 4rem;
    font-size: 3rem;
    margin-bottom: 0.5rem;
    border: 1px solid #525252;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    line-height: 1;
    overflow: hidden; /* Zajistí, že obsah nepřesáhne kruh */
  }

  code {
    font-family: monospace;
    background: #f4f4f4;
    padding: 2px 4px;
    border-radius: 4px;
  }
</style>
