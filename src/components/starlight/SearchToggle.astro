---
/**
 * SearchToggle – oficiální Starlight způsob
 * Neobsahuje žádný JS
 * Otevírá search modal pomocí data-open-modal="search"
 */
import Search from '@astrojs/starlight/components/Search.astro';
---
  <Search />

<div class="search-toggle-wrapper">
  <button data-open-modal="search"
          aria-label="Search"
          aria-keyshortcuts="Control+K"
          class="astro-v37mnknz">
  </button>
</div>

<style lang="scss">
.search-toggle-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-toggle-btn {
  background: transparent;
  border: none;
  padding: 0;
  cursor: pointer;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.4s ease;

  &:hover {
    transform: scale(1.5);
    z-index: 10;

    .theme-icon-container {
      animation: pulse-glow 3s infinite ease-in-out;
      box-shadow: 0 8px 15px rgba(0, 0, 0, 0.5);
    }
  }
}

.theme-icon-container {
  width: 38px;
  height: 38px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  transition: all 0.4s ease;

  svg {
    width: 32px;
    height: 32px;
    fill: currentColor;
  }
}
</style>
