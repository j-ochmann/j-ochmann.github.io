  "li", "lk", "lr", "ls", "lt", "lu", "lv", "ly", "ma", "mc", "md", "me", "mf", "mg", "mh", "mk",
  "ml", "mm", "mn", "mo", "mp", "mq", "mr", "ms", "mt", "mu", "mv", "mw", "mx", "my", "mz", "na",
  "nc", "ne", "nf", "ng", "ni", "nl", "no", "np", "nr", "nu", "nz", "om", "pa", "pe", "pf", "pg",
  "ph", "pk", "pl", "pm", "pn", "pr", "ps", "pt", "pw", "py", "qa", "re", "ro", "rs", "ru", "rw",
  "sa", "sb", "sc", "sd", "se", "sg", "sh", "si", "sj", "sk", "sl", "sm", "sn", "so", "sr", "ss",
  "st", "sv", "sx", "sy", "sz", "tc", "td", "tf", "tg", "th", "tj", "tk", "tl", "tm", "tn", "to",
  "tr", "tt", "tv", "tw", "tz", "ua", "ug", "um", "us", "uy", "uz", "va", "vc", "ve", "vg", "vi",
  "vn", "vu", "wf", "ws", "ye", "yt", "za", "zm", "zw"];
import 'flag-icons/css/flag-icons.min.css';
---

<div class="flag-grid">
  {flags.map((code) => (
    <div class="flag-card">
      <span class={`fi fi-${code} fib`}></span>
      <code>{code}</code>
    </div>
  ))}
</div>

<style>
  .flag-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(35px, 1fr));
    align-items: start;
  }
  .flag-card {
    //content-visibility: auto;
    contain-intrinsic-size: 50px 70px;
    will-change: transform;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    margin-top: 0;
    transition: transform 0.2s ease-in-out;
  }

  .flag-card:hover {
    transform: scale(2);
    z-index: 10;
    //transition: transform 0.2s ease-in-out;
  }

  .fi {
    width: 2rem !important;
    height: 2rem !important;
    margin-bottom: -0.3rem; /* Snížení mezery */
    border: 1px solid #525252;
    border-radius: 50%;
    overflow: hidden; /* Zajistí, že obsah nepřesáhne kruh */

    /* Přikáže obrázku na pozadí, aby vyplnil celý kontejner */
    background-size: cover !important;
    background-position: center;
    z-index: 1;
  }

  code {
    font-family: monospace;
    //background: #cfcfcf;
    padding: 0px 2px 0px 2px;
    border-radius: 5px;
    transform: rotate(-35deg);
    margin: -0.3rem 0 0 1.5rem; /* Posun nahoru a doprava */
    //z-index: 10;
  }

  .country-name {
    display: none;
    font-size: 0.5rem;
    margin-top: 0.2rem;
  }

  .flag-card:hover .country-name {
    display: block;
  }
</style>
