---
import mainImage from '@/assets/img/globe/world_2000x857px.svg';
import hoverImage from '@/assets/img/globe/night_960x480px.jpg';
import type { StarlightRouteData } from '@astrojs/starlight/route-data';
import DefaultSidebar from '@astrojs/starlight/components/Sidebar.astro';
interface Props extends StarlightRouteData {}
const props = Astro.props;
---

<div class="geo-sidebar-custom">
  <!-- Sekce s globusem -->
  <div class="globe-container">
    <div class="globe"></div>
  </div>
  <DefaultSidebar {...props} />
</div>

<style>
  .globe {
    width: 220px;
    height: 220px;
    margin: 1rem auto;
    border-radius: 50%;
    background: hoverImage repeat-x, 
                radial-gradient(circle at 30% 30%, #4facfe 0%, #00f2fe 100%);
    box-shadow: inset -10px -10px 20px rgba(0,0,0,0.4);
    animation: pulse 4s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
  }
</style>
