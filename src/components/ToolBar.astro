---
import ThemeSelect from '@/components/starlight/ThemeSelect.astro';
import LanguageSelect from '@/components/starlight/LanguageSelect.astro';
import Search from '@/components/starlight/Search.astro';
---

<div class="toolbar">
  <div class="left-section">
    <ThemeSelect />
  </div>
  <div class="right-section">
    <LanguageSelect />
    <Search />
  </div>
</div>

<style lang="scss">
  .toolbar {
    position: fixed;
    top: 0;
    left: 0;
    width: 300px; 
    height: 50px;
    z-index: 1000;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 10px;
    /* Glassmorphism */
    backdrop-filter: blur(8px) saturate(180%);
    -webkit-backdrop-filter: blur(8px) saturate(180%);
    /*background: color-mix(in srgb, var(--sl-color-bg-sidebar), transparent 75%);*/
    border-right: 1px solid color-mix(in srgb, var(--sl-color-hairline), transparent 0%);
    border-bottom: 1px solid color-mix(in srgb, var(--sl-color-hairline), transparent 80%) !important;
  }

  .left-section, .right-section {
    display: flex;
    align-items: center;
    /*gap: 8px; */
    :global(.starlight-theme-select),
    :global(.starlight-language-select),
    :global(sl-search) {
      background: var(--sl-color-bg-nav);
      border-radius: 20px; /* Tablet/Pill design místo force-circle */
      border: 1px solid var(--sl-color-hairline);
    }
  }
  /* Pokud Search v Starlightu vyžaduje specifickou šířku */
  .right-section :global(sl-search) {
    flex-shrink: 0;
  }
</style>
