---
// SidebarRoot.astro
import '../assets/css/style.scss';

// Navigační odkazy pro root
const navLinks = [
  { title: "Portfolio", url: "/" },
  { title: "DevHub", url: "/dev/" },
  { title: "Kontakt", url: "/contacts/" },
];
---

<aside class="sidebar-root">
  <div class="profile-container">
    <a href="/" class="profile-link">
      <div class="profile-img-wrapper">
        <img src="/assets/img/20250712_056.jpg" alt="Jindřich" class="profile-img main-img" />
        <img src="/assets/img/20250712_055.jpg" alt="Jindřich" class="profile-img hover-img" />
      </div>
      <h1 class="profile-name">Jindřich Ochmann</h1>
      <p class="profile-description">Software Engineer</p>
    </a>

    <div class="social-icons-arc">
      <a href="https://github.com/j-ochmann" class="icon-gh">
        <svg><use xlink:href="#icon-github"></use></svg>
      </a>
      <a href="https://www.linkedin.com/in/jindrich-ochmann" class="icon-li">
        <svg><use xlink:href="#icon-linkedin"></use></svg>
      </a>
      <a href="https://www.instagram.com/jindrichochmann" class="icon-ig">
        <svg><use xlink:href="#icon-instagram"></use></svg>
      </a>
      <a href="https://www.facebook.com/jindrich.ochmann" class="icon-fb">
        <svg><use xlink:href="#icon-facebook"></use></svg>
      </a>
      <a href="https://www.youtube.com/@JindrichOchmann" class="icon-yt">
        <svg><use xlink:href="#icon-youtube"></use></svg>
      </a>
    </div>

    <nav class="nav-links">
      <ul>
        {navLinks.map(link => (
          <li><a href={link.url}>{link.title}</a></li>
        ))}
      </ul>
    </nav>
  </div>
</aside>
